@page
@model LoginModel
@{
}

<h3>User Login</h3>

<br />

<div class="container border" style="padding:40px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row" style="padding: 5px">
            <div class="col-2">
                <label asp-for="Credential.Email"></label>
            </div>

            <div class="col-6">
                <input type="text" asp-for="Credential.Email" class="form-control" />
            </div>

            <span class="text-danger col-3" asp-validation-for="Credential.Email"></span>
        </div>

        <div class="form-group row" style="padding:5px">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>

            <div class="col-6">
                <input type="password" asp-for="Credential.Password" class="form-control" />
            </div>
            <span class="text-danger  col-3" asp-validation-for="Credential.Password"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="col-2">
                <a class="btn btn-link" href="/Account/Register">Sign Up</a>
            </div>
        </div>
    </form>
</div>